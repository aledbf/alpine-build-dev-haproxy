sha512sums="3acad12cfcf2fd210edc55424a548a6c06a86b0aecda89b0ab531c27b38c6daa9d8f203fb9faa12ac60ea0d1e22ecb09333bf3b3eaec5bbec5187a97adc6e621  haproxy-1.6-dev4.tar.gz
